page{
    background-color:#EFEFF4;
}

.container{
    padding-bottom: 50px;
}
.content{
    overflow: hidden;
}

/* ----- 顶部 -----*/
.top-area-view{
    display: flex;
    flex-direction:column;
    background-color: white;
}
.nh-view{
     display: flex;
     flex-direction:column;
     justify-content: center;
     align-items: center;
     margin-top: 40px;
     padding-bottom: 15px;
}

.nh-view view{
    margin-top: 10px;
}

.nh-view-nh{
  color: #F2424E;
}
.nh-view-nh-1{
      font-size: 40px;
}
.nh-view-nh-2{
      font-size: 18px;
}

.nh-view-title{
    font-size: 13px;
    color: #AAAAAA;
}

.progress-view{
    display:flex;
    flex-direction: column;
    margin: 10px 15px 0px 15px;
}

.progress-titleview{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 10px;
    font-size: 13px;
    color: #AAAAAA;
}

.btns-view{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top: 20px;
}

.btns-view image{
    width:37px;
    height: 42px;
}

.btns-view view{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.btn-title{
    font-size: 14px;
    margin-top: 10px;
    margin-bottom: 15px;
    color: #323232;
}

/* ----- 中间 -----*/
.center-area-view{
    margin-top: 15px;
    /*padding-bottom: 50px;*/
}

.center-line-view-cell{
    background-color: white;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #F0F0F0;
    height: 40px;
    /*padding: 0px 15px 0px 15px;*/
}

.cell-contentview{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-right: 15px;
    margin-left: 15px;
    background-color: white;
    flex-grow: 1;
}

.activetitle{
    font-size: 13px;
    color:red;
    text-decoration: underline;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp:1;
    -webkit-box-orient: vertical;
}
.jiantou{
  background-image: url("../resource/jiantou.png");
  width: 15px;
  height: 15px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.cell-4{
    position: relative;
}

.celltitle{
    font-size: 13px;
    color:#3A3A3A;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp:1;
    -webkit-box-orient: vertical;
}

.cell-sub{
    display:flex;
    flex-direction: row;
    align-items: center;
}

.cell-sub view{
    display: flex;
    align-items: center;
}

.celldetailtitle{
   font-size: 13px;
    color:#969696; 
    margin-right: 5px;
}

/* ----输入框----- */
.center-subarea{
    margin-top: 15px; 
    padding-left: 15px;
    padding-right: 15px;
}

.center-subarea-to{
    font-size: 13px;
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    justify-content: space-between;
}

.sy-view{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.sy-title{
    color:#969696; 
}
.sy-count{
     color:red;
}

.sy-btn{
  color:#9ED8FA;   
}

.tz-input-view{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin-top: 15px;
    height: 52px;
    border-width: 1px;
    border-color: #E7E9E7;
    border-radius: 2px;
    background-color: white;
}

.tz{
    display: flex;
    flex-direction: row;
    align-items: flex-end; 
    align-items: center;
    font-size: 17px;
}

.tz-yuan{
    font-size: 13px;
    margin-left: 10px;
}

/*-----底部----*/
.bottom{
    height: 50px;
    position: fixed;
    width: 100%;
    bottom: 0px;
    left: 0px;
    right: 0px;
    background-color: red;
    z-index: 100000;
}

.bt-tz{
    color: white;
    font-size: 20px;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}





